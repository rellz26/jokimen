using UnityEngine;
using UnityEngine.UI;

public class UIPanelController : MonoBehaviour
{
    // Referensi ke panel dan tombol
    public GameObject panel;  // Panel UI
    public Button button;     // Tombol UI

    void Start()
    {
        // Pastikan panel awalnya aktif
        panel.SetActive(true);

        // Tambahkan listener untuk tombol
        button.onClick.AddListener(OnButtonClick);
    }

    // Fungsi untuk menangani aksi saat tombol ditekan
    void OnButtonClick()
    {
        // Menutup panel saat tombol ditekan
        panel.SetActive(false);
        Debug.Log("Tombol ditekan, panel ditutup!");
    }

    // Fungsi untuk membuka panel (jika dibutuhkan)
    public void OpenPanel()
    {
        panel.SetActive(true);
    }

    // Fungsi untuk menutup panel (jika dibutuhkan)
    public void ClosePanel()
    {
        panel.SetActive(false);
    }
}
