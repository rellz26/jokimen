import os

def execute_script():
    script = input("Enter your Lua script: ")
    if not script.strip():
        print("Warning: Script is empty!")
        return
    
    try:
        # Simpan script ke file sementara
        with open("temp_script.lua", "w") as f:
            f.write(script)
        
        # Eksekusi script menggunakan Named Pipes untuk Vega X
        pipe_name = r"\\.\pipe\VegaX"  # Sesuaikan dengan executor Vega X
        if not os.path.exists(pipe_name):
            print("Error: Vega X Executor not running or pipe not found!")
            return
        
        with open(pipe_name, "w") as pipe:
            pipe.write(script)
        
        print("Success: Script executed successfully on Vega X!")
    except Exception as e:
        print(f"Error: Failed to execute script: {e}")

if __name__ == "__main__":
    while True:
        print("\nRoblox Script Executor (Vega X)")
        print("1. Execute Script")
        print("2. Exit")
        choice = input("Choose an option: ")
        
        if choice == "1":
            execute_script()
        elif choice == "2":
            print("Exiting...")
            break
        else:
            print("Invalid choice, please try again.")
